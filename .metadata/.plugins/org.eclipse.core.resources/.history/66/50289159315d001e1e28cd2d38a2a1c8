package dgv.psp.ud1.ac1.ej3;

public class EchoCommandLineOptional {

	public static void main(String[] args) {

		String[] defaultParams = new String[2];
		defaultParams[0] = "parametro1";
		defaultParams[1] = "parametro2";
		
//		if (args.length == 0) {
//			args = new String[2];
//			args[0] = defaultParams[0];
//			args[1] = defaultParams[1];
//		} else if (args.length == 1) {
//			args = new String[2];
//			args[1] = defaultParams[1];
//		}

		int paramCount = 0;
		
		for (String param: args) {
			paramCount++;
			System.out.println("Parameter " + paramCount + " = " + param);
		}
		
		String cadena = "Cadena";
		byte[] cifrado = cadena.getBytes();
		
		for (int i = 0; i < cifrado.length; i++) {
			System.out.println(cifrado[i]);
		}
		
		System.out.println(cifrado.toString());
	}

}
